<link rel="stylesheet" href="/css/user_profile.css">
<h1>
    Codeial / User profile Page
</h1>

<% if (locals.user.id == user_profile.id) { %>

    <form action="/users/update/<%= user_profile.id %>" method="post">
        <input type="text" name="name" placeholder="Enter Name..." value="<%= user_profile.name %>" required>
        <input type="email" name="email" placeholder="Enter Email..." value="<%= user_profile.email %>" required>
        <input type="submit" value="Update">
    </form>

<% } else { %>

    <p><%= user_profile.name %></p>
    <p><%= user_profile.email %></p>

<% } %>